<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <size
                android:width="@dimen/btn_capture_size"
                android:height="@dimen/btn_capture_size" />
            <corners android:radius="@dimen/btn_capture_half_size" />
            <solid android:color="#f1f1f1" />
        </shape>
    </item>

    <item
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp">

        <shape android:shape="oval">
            <corners android:radius="@dimen/btn_capture_half_size" />
            <solid android:color="#cccccc" />
        </shape>
    </item>
</layer-list>